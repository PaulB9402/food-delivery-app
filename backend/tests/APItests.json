{
  "info": {
    "name": "Food Delivery API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "UserController",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\",\n  \"role\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "RestaurantController",
      "item": [
        {
          "name": "Create Restaurant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pizza Palace\",\n  \"address\": \"123 Main St\",\n  \"phone\": \"555-1234\",\n  \"deliveryConstraints\": \"Minimum order: $10\",\n  \"user\": {\n    \"id\": {{user_id}}\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/restaurants",
              "host": ["{{base_url}}"],
              "path": ["restaurants"]
            }
          }
        },
        {
          "name": "Get Restaurant by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/restaurants/{{restaurant_id}}",
              "host": ["{{base_url}}"],
              "path": ["restaurants", "{{restaurant_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "FoodItemController",
      "item": [
        {
          "name": "Create Food Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pepperoni Pizza\",\n  \"description\": \"Classic pepperoni pizza\",\n  \"price\": 12.99,\n  \"photos\": \"https://example.com/pizza.jpg\",\n  \"restaurant\": {\n    \"id\": {{restaurant_id}}\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/food-items",
              "host": ["{{base_url}}"],
              "path": ["food-items"]
            }
          }
        },
        {
          "name": "Get Food Item by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/food-items/{{food_item_id}}",
              "host": ["{{base_url}}"],
              "path": ["food-items", "{{food_item_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "OrderController",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer\": {\n    \"id\": {{user_id}}\n  },\n  \"restaurant\": {\n    \"id\": {{restaurant_id}}\n  },\n  \"status\": \"PENDING\",\n  \"totalPrice\": 25.98,\n  \"orderItems\": [\n    {\n      \"foodItem\": {\n        \"id\": {{food_item_id}}\n      },\n      \"quantity\": 2,\n      \"customization\": \"Extra cheese\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "DeliveryController",
      "item": [
        {
          "name": "Create Delivery",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order\": {\n    \"id\": {{order_id}}\n  },\n  \"deliveryPerson\": {\n    \"id\": {{delivery_person_id}}\n  },\n  \"status\": \"PENDING\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/deliveries",
              "host": ["{{base_url}}"],
              "path": ["deliveries"]
            }
          }
        },
        {
          "name": "Update Delivery Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"DELIVERED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/deliveries/{{delivery_id}}",
              "host": ["{{base_url}}"],
              "path": ["deliveries", "{{delivery_id}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080" },
    { "key": "user_email", "value": "john.doe@example.com" },
    { "key": "user_password", "value": "password123" },
    { "key": "user_id", "value": "1" },
    { "key": "restaurant_id", "value": "1" },
    { "key": "food_item_id", "value": "1" },
    { "key": "order_id", "value": "1" },
    { "key": "delivery_person_id", "value": "2" },
    { "key": "delivery_id", "value": "1" }
  ]
}